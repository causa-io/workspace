{
  "name": "@causa/workspace",
  "version": "0.12.0",
  "description": "Provides the base functionalities for a workspace: configuration loading and registering functions.",
  "repository": "github:causa-io/workspace",
  "license": "ISC",
  "type": "module",
  "engines": {
    "node": ">=16"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./configuration": "./dist/configuration/index.js",
    "./function-registry": "./dist/function-registry/index.js",
    "./initialization": "./dist/initialization/index.js",
    "./service-cache": "./dist/service-cache/index.js",
    "./testing": "./dist/testing/index.js",
    "./validation": "./dist/validation/index.js"
  },
  "files": [
    "dist/",
    "LICENSE.md",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "prebuild": "rimraf ./dist",
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules --no-warnings=ExperimentalWarning\" jest",
    "test:cov": "npm run test -- --coverage"
  },
  "dependencies": {
    "@types/lodash": "^4.14.200",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "globby": "^13.2.2",
    "js-yaml": "^4.1.0",
    "lodash-es": "^4.17.21",
    "pino": "^8.16.1",
    "resolve-package-path": "^4.0.3",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "@tsconfig/node18": "^18.2.2",
    "@types/jest": "^29.5.6",
    "@types/js-yaml": "^4.0.8",
    "@types/lodash-es": "^4.17.10",
    "@types/node": "^18.18.7",
    "@types/semver": "^7.5.4",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
