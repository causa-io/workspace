{
  "name": "@causa/workspace",
  "version": "0.22.0",
  "description": "Provides the base functionalities for a workspace: configuration loading and registering functions.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/causa-io/workspace.git"
  },
  "license": "ISC",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./configuration": "./dist/configuration/index.js",
    "./function-registry": "./dist/function-registry/index.js",
    "./initialization": "./dist/initialization/index.js",
    "./service-cache": "./dist/service-cache/index.js",
    "./testing": "./dist/testing/index.js",
    "./validation": "./dist/validation/index.js"
  },
  "files": [
    "dist/",
    "LICENSE.md",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "prebuild": "rimraf ./dist",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "cpy 'context/schemas/**' '../dist/' --cwd=src --base=cwd",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules --no-warnings=ExperimentalWarning\" jest",
    "test:cov": "npm run test -- --coverage",
    "typecheck": "tsc --noEmit",
    "generateConfigurationSchemas": "cs model genCode && perl -pi -e 's|\\@causa/runtime|../validation/index.js|g' src/context/generated.ts"
  },
  "dependencies": {
    "@types/lodash": "^4.17.23",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "globby": "^16.1.0",
    "js-yaml": "^4.1.1",
    "lodash-es": "^4.17.23",
    "pino": "^10.3.1",
    "resolve-package-path": "^4.0.3",
    "semver": "^7.7.4"
  },
  "devDependencies": {
    "@swc/core": "^1.15.11",
    "@swc/jest": "^0.2.39",
    "@tsconfig/node20": "^20.1.9",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^18.19.130",
    "@types/semver": "^7.7.1",
    "cpy-cli": "^7.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "jest": "^30.2.0",
    "jest-extended": "^7.0.0",
    "rimraf": "^6.1.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0"
  }
}
